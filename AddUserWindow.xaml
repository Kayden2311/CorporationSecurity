<Window x:Class="CorporationSecurity.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="600" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#f4f6fa">
        <Border Background="White" CornerRadius="14" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="520" >
            <StackPanel>
                <TextBlock Text="Add User" FontSize="20" FontWeight="Bold" Foreground="#27ae60" Margin="0,0,0,18" HorizontalAlignment="Center"/>
                <UniformGrid Columns="2" Rows="4" Margin="0,0,0,0" HorizontalAlignment="Stretch">
                    <StackPanel Margin="0,0,24,32">
                        <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,4" FontSize="12"/>
                        <TextBox x:Name="UsernameBox" Height="28" FontSize="12" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <PasswordBox x:Name="PasswordBox" Height="32" FontSize="14" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,24,32">
                        <TextBlock Text="First Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox x:Name="FirstNameBox" Height="32" FontSize="14" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Last Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox x:Name="LastNameBox" Height="32" FontSize="14" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,24,32">
                        <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBox x:Name="EmailBox" Height="32" FontSize="14" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Role" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <ComboBox x:Name="RoleBox" Height="32" FontSize="14" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    <StackPanel Margin="0,4,24,0" VerticalAlignment="Top">
                        <CheckBox x:Name="IsActiveBox" Content="Active" FontSize="14"/>
                    </StackPanel>
                    <StackPanel/>
                </UniformGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button Content="Save" Width="80" Background="#27ae60" Foreground="White" FontWeight="Bold" Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 