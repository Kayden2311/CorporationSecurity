<Window x:Class="CorporationSecurity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Corporation Security" Height="420" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#f4f6fa">
        <Border Background="White" CornerRadius="14" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="370" >
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Corporation Security" 
                           FontSize="26" 
                           FontWeight="Black" 
                           Foreground="#27ae60" 
                           FontFamily="Segoe UI" 
                           Margin="0,0,0,8" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sign In to Continue" 
                           FontSize="15" 
                           FontWeight="SemiBold" 
                           Foreground="#2d3e50" 
                           FontFamily="Segoe UI" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Username" 
                           Margin="0,0,0,5" 
                           FontWeight="Bold" 
                           FontFamily="Segoe UI"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="32" 
                         Margin="0,0,0,15" 
                         FontSize="14" 
                         FontFamily="Segoe UI"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text="Password" 
                           Margin="0,0,0,5" 
                           FontWeight="Bold" 
                           FontFamily="Segoe UI"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="32" 
                             Margin="0,0,0,25" 
                             FontSize="14" 
                             FontFamily="Segoe UI"
                             VerticalContentAlignment="Center"/>
                <Button Content="Login" 
                        Height="38" 
                        Background="#27ae60" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="15" 
                        FontFamily="Segoe UI" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="LoginButton_Click"/>
                <TextBlock x:Name="ErrorTextBlock" 
                           Foreground="#e74c3c" 
                           Margin="0,10,0,0" 
                           Visibility="Collapsed" 
                           TextWrapping="Wrap" 
                           FontFamily="Segoe UI"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
