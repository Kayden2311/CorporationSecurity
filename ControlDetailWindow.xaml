<Window x:Class="CorporationSecurity.ControlDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Detail" Height="320" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#f4f6fa">
        <Border Background="White" CornerRadius="14" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="340" >
            <StackPanel>
                <TextBlock Text="Edit Control" FontSize="20" FontWeight="Bold" Foreground="#27ae60" Margin="0,0,0,18" HorizontalAlignment="Center"/>
                <TextBlock Text="Description" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionBox" Height="32" FontSize="14" Margin="0,0,0,12"/>
                <TextBlock Text="Effectiveness" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <ComboBox x:Name="EffectivenessBox" Height="32" FontSize="14" Margin="0,0,0,18">
                    <ComboBoxItem Content="Pass"/>
                    <ComboBoxItem Content="Fail"/>
                    <ComboBoxItem Content="Pending"/>
                </ComboBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button Content="Save" Width="80" Background="#27ae60" Foreground="White" FontWeight="Bold" Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 